generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Personagem {
  id          Int     @id @default(autoincrement())
  title String

  npcs Npc[]
  inimigos Inimigo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("personagens")
}

model Inimigo {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
  location    String
  drop        String
  isBoss      Boolean
  imageUrl    String

  personagemId Int
  personagem Personagem @relation(fields: [personagemId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inimigos")
}

model Npc {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  location    String
  functionNpc    String
  imageUrl    String

  personagemId Int
  personagem Personagem @relation(fields: [personagemId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("npcs")
}

model Arma {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  location     String
  typeOfWeapon String
  costOfCells Int
  howToGet    String
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("armas")
}

model Mutacao {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  howToGet     String
  location     String
  costOfCells  Int
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mutacoes")
}
