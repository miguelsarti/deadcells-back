generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model itensDeCura {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  location    String
  howToGet    String
  releaseYear Int
  imageUrl    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("curas")
}

model Inimigo {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String
  location    String
  isBoss      Boolean
  releaseYear Int
  imageUrl    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("inimigos")
}

model Npc {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String
  location    String
  function    String
  releaseYear Int
  imageUrl    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("npcs")
}

model Arma {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  location     String
  typeOfWeapon String
  costOfCells Int
  releaseYear  Int
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("armas")
}


model Mapa {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  scrollFragments Int
  releaseYear  String
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mapas")
}

model Mutacao {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  howToGet     String
  location     String
  releaseYear  Int
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mutacoes")
}

model Celulas {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("celulas")
}
model Roupas {
  id           Int    @id @default(autoincrement())
  name         String @unique
  description  String
  howToGet     String
  location     String
  releaseYear  Int
  imageUrl     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("roupas")
}
